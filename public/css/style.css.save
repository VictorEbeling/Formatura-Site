@charset 'utf-8';
@import url('https://fonts.googleapis.com/css2?family=Ledger&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Great+Vibes&family=Ledger&display=swap');

*{
    margin: 0;
    padding: 0;
    font-family: "Ledger", serif;
    text-decoration: none;
    list-style: none;
    box-sizing: border-box;
    user-select: none;
}

body{
    max-width: 100vw;
    background-color: #feffee;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

#body-index{
    background-size: cover;
    background-repeat: no-repeat;
}

header{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

#header-gifts{
    border-bottom: solid 2px grey;
    flex-direction: row;
    align-items: flex-start;
}

#header-gifts h1{
    margin-top: 2%;
}

main{
    width: 100%;
    height: 100%;
    margin-top: 5%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.card{
    height: 100%;
    width: 20%;
    margin: 2%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.gift-img{
    width: 100%;
    border: solid 1px black;
    border-radius: 50px 50px 0 0;
    background: linear-gradient(45deg, rgba(240,240,240,1) 0%, rgba(255,255,255,1) 100%);
}

.subtitle{
    height: 10%;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    border: solid 1px black;
    border-top: none;
    padding: 2%;
}

#logo{
    width: 200px;
    margin: 2%;
}

#title{
    margin-top: 1%;
    font-size: .8rem;
    text-align: center;
    color: black;
}

#gift-button{
    color: white;
    height: 80px;
    width: 200px;
    background-color: #9E1C3F;
    margin-top: 10vh;
    margin-bottom: 10vh;
    border-radius: 5px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: .6rem;
}

.plus-button{
    width: 40px;
    height: 40px;
    cursor: pointer;
    border: solid black 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 2.4rem;
    transition: all .2s;
}

.minus-button{
    width: 40px;
    height: 40px;
    cursor: pointer;
    border: solid black 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 2.4rem;
    transition: all .2s;
}

.plus-button:hover{
    background-color: #c2c4a9;
}

.minus-button:hover{
    background-color: #c2c4a9;
}

#qrcode{
    position: absolute;
    height: 100px;
    width: 100px;
}

#checkout-button{
    margin: 100px;
    height: 75px;
    width: 25%;
    background-color: #9E1C3F;
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
}

#qrcode-card{
    margin-top: 1%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

@media (max-width: 550px) {
    #logo{
        width: 100px;
    }

    
}

